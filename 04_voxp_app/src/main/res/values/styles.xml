<resources>

    <style name="AppThemeSdkVersioned" parent="Theme.AppCompat.Light.DarkActionBar" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeSdkVersioned">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorAccent">@color/secondaryLightColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextHeader">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBarText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ToolbarSearchTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/primaryLightColor</item>
        <item name="android:editTextColor">@color/primaryTextColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>
</resources>
